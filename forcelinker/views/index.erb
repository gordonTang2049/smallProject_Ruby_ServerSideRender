            <label for="progress">  60% </label>
<br>
    <div class="container">
        <div class="progress">
            
            <div class="progress-bar" role="progressbar" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100" style="width:9%">
            
            </div>
    </div>
<br>
    <section>What I trying to do :</section>
    <p> <%=record['target_content'] %> </p>
    <br>
    <h3>Milestone : </h3>
    <p> <%=record['milestone'] %> </p>
<%end%>

</div>

